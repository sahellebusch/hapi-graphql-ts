    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^25.1.2",
    "@types/node": "^13.7.1",
    "http-status-codes": "^1.4.0",
    "humps": "^2.0.1",
    "jest": "^25.1.0",
    "lint-staged": "^10.0.7",
    "lodash": "^4.17.15",
    "prettier": "^1.19.1",
    "ts-jest": "^25.2.0",
    "ts-node-dev": "^1.0.0-pre.44",
    "tsc": "^1.20150623.0",
    "type-graphql": "^0.17.6",
    "typescript": "^3.7.5"
  },
  "license": "MIT",
  "lint-staged": {
    "**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "clean": "docker-compose down && rm -rf postgres/data",
    "dev": "tsc -w",
    "lint": "eslint --ext .ts src",
    "lint:fix": "npm run lint -- --fix",
    "precommit": "lint-staged",
    "prestart": "npm run build",
    "pretest": "npm run build",
    "start": "node dist/index.js",
    "start:dev": "ts-node-dev src/index.ts",
    "test": "./bin/start-tests.sh",
    "test:clean": "./bin/clean-tests.sh",
    "test:internal": "docker-compose -f src/test/container/docker-compose.yml -p idiomatic-hapi-ts-server-tests exec -T idiomatic-hapi-ts-server-test ./node_modules/jest/bin/jest.js"
  }
}
